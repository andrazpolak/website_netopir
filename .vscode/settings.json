{
  "[python]": {
    "editor.rulers": [88],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "python.terminal.executeInFileDir": true,
  "python.terminal.activateEnvironment": true,
  "python.formatting.provider": "none",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--config=.flake8"],
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python:/backend/lib/pkgpy-kds-util/src",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend",
    "${workspaceFolder}/backend/lib",
    "${workspaceFolder}/backend/lib/pkgpy-kds-database/src",
    "${workspaceFolder}/backend/lib/pkgpy-kds-acoustic/src",
    "${workspaceFolder}/backend/lib/pkgpy-kds-util/src"
  ]
}
